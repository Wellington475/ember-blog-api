<img class="card-img-top" src="http://via.placeholder.com/350x150" alt="Card image cap">
<div class="card-body">
  <h5 class="card-title">{{post.title}}</h5>
  {{#link-to 
    'posts.view' 
    post.id
    class='btn btn-primary'
  }}
    Visualizar
  {{/link-to}}
  &nbsp;
  {{#link-to 
    'posts.edit' 
    post.id
    class='btn btn-warning'
  }}
    Alterar
  {{/link-to}}
  &nbsp;
</div>
